<Window x:Class="WoW_Addon_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoW_Addon_Manager"
        xmlns:views="clr-namespace:WoW_Addon_Manager.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Installed Addons">
                <Grid x:Name="installedAddonGrid" Background="#FFE5E5E5">
                    <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <views:InstalledAddonView x:Name="InstalledAddonViewControl" VerticalAlignment="Stretch" Grid.Row="1" Margin="0,40,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Get More Addons">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Settings"/>
        </TabControl>

    </Grid>
</Window>
